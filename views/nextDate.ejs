            <li><a href="/">Logout</a></li>
            <li>
          </ul> 
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-11">
            <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Doctor Module</h1>
          </div>
         
        </div>
      </div>
      
    </header>
    
    <section id="breadcrumb">
      <div class="container">
        <div class="row">
          <div class="col-md">
            <ol class="breadcrumb">
              <li class="active">Patient Next Date</li>
            </ol>
          </div>
          
        </div>
        
      </div>
    </section>

    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="list-group">
              <a href="/doctor/home" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Home</a>
              <a href="/doctor/" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> MY Profile</a>
              <a href="/doctor/list/nextDate/<%= reg_no;%>" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>  Patient Next Date</a>
            </div>
          </div>


          <section id="content" class="column-right">
        <form action="/doctor/list/updateNextDate/<%= reg_no%>" method="post">
            <label>Select Date:</label>
            <input type="date" name="date"><br>
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure to confirm the Next Channeling Date..!')">Confirm</button>
        </form>

        <div class="container">
            <hr>
            <div class=" col-md-9 col-lg-9 ">
            <table class="table table-user-information" align="center">
                <tbody>
                <tr>
                    <td>
                        <a href="/doctor/list/prescription/<%= reg_no%>" class="btn btn-success active">Prescription</a>
                    </td>
                    <td>
                        <a href="/doctor/list" class="btn btn-warning active" onclick="return confirm('Are YOU Sure To GET Next Patient..!')">Next Patient</a>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
        </div>

    </section>

   
    <footer id="footer">
      <p>Copyright &copy</p>
      
