<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Prescription List</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/adminStyle.css">
    <script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
</head>

<body>

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Diabetic Clinic</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="">Welcome,Kavinda</a></li>
            <li><a href="/">Logout</a></li>
            <li>
        </ul>
    </div><!--/.nav-collapse -->
</nav>

<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-11">
                <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Doctor Module</h1>
            </div>

        </div>
    </div>

</header>

<section id="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md">
                <ol class="breadcrumb">
                    <li class="active">Prescription List</li>
                </ol>
            </div>

        </div>

    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/doctor/list/view/<%= reg_no%>" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>  Prescription List</a>
                </div>
            </div>

            <section id="content" class="column-right">

                <div class="container">
                    <h3>Patient ID:&nbsp<%= reg_no%></h3>
                    <div class=" col-md-9 col-lg-9 ">
                        <table class="table table-user-information" align="center">
                            <tbody>
                            <tr>
                                <td><h4>File Name</h4></td>
                                <td><h4>Action</h4></td>
                            </tr>
                            <% for (var i=0;i<medicineList.length;i++){%>
                            <tr>
                                <td><%= medicineList[i].prescription;%></td>
                                <td>
                                    <a class="btn btn-success active" href="/doctor/list/viewPdf/<%=medicineList[i].prescription%>" target="_blank">View</a>
                                </td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <a class="btn btn-warning active" href="/doctor/list/prescription/<%= reg_no%>">Back To Prescription Page</a>


            </section>



            <footer id="footer">
                <p>Copyright &copy</p>

            </footer>
            <!--ckeditor-->
            <script>
                CKEDITOR.replace( 'pagebody' );
            </script>

            <!-- Bootstrap core JavaScript
            ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
            <script src="/js/jquery.min.js"></script>
            <script src="/js/bootstrap.min.js"></script>


</body>
</html>
